<?xml version="1.0"?>

<robot name="my_robot">

  <link name="world"/>

  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/> 
  </joint>


  <link name="base_link">
    <inertial>
      <mass value="10"/>
      <origin xyz="1.5 0 2.5" rpy="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="1.5 0 2.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 5.0"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="1.5 0 2.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 5.0"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Gray</material>
  </gazebo>


  <joint name="guide1_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="guide1_link"/>
    <limit upper="4.0" lower="0.0" effort="1000" velocity="100"/>
    <origin xyz="1.5 -0.1 0.8071" rpy="0 -1.5708 0"/>
    <dynamics damping="0.1"/>
  </joint>


  <link name="guide1_link">
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.35" rpy="0 1.5708 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.35" rpy="0 1.5708 0"/>
      <geometry>
        <box size="0.7 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.35" rpy="0 1.5708 0"/>
      <geometry>
        <box size="0.7 0.1 0.1"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="guide1_link">
    <material>Gazebo/Gray</material>
  </gazebo>


  <joint name="arm3_joint" type="fixed">
    <parent link="guide1_link"/>
    <child link="arm3_link"/> 
  </joint>


  <link name="arm3_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="arm3_link">
    <material>Gazebo/Yellow</material>
  </gazebo>


  <joint name="arm2_joint" type="continuous">
    <parent link="arm3_link"/>
    <child link="arm2_link"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 1" rpy="0 0 0"/>
    <dynamics damping="0.1"/>
  </joint>


  <link name="arm2_link">
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0.6" rpy="0 1.5708 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.6" rpy="0 1.5708 0"/>
      <geometry>
        <box size="1.2 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.6" rpy="0 1.5708 0"/>
      <geometry>
        <box size="1.2 0.1 0.1"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="arm2_link">
    <material>Gazebo/Blue</material>
  </gazebo>


  <joint name="arm1_joint" type="continuous">
    <parent link="arm2_link"/>
    <child link="arm1_link"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0.1 1.2071" rpy="0 0 0"/>
    <dynamics damping="0.1"/>
  </joint>
  <transmission name="arm1_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="arm1_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="arm1_motor">
       <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
       <mechanismReduction>1</mechanismReduction>
    </actuator>
  </transmission>


  <link name="arm1_link">
    <inertial>
      <origin xyz="-0.3536 0 -0.3536" rpy="0 0.7854 0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.3536 0 -0.3536" rpy="0 0.7854 0"/>
      <geometry>
        <box size="0.1 0.1 1.0"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="-0.3536 0 -0.3536" rpy="0 0.7854 0"/>
      <geometry>
        <box size="0.1 0.1 1.0"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="arm1_link">
    <material>Gazebo/Red</material>
  </gazebo>


  <joint name="arm0_joint" type="fixed">
    <parent link="arm1_link"/>
    <child link="arm0_link"/> 
  </joint>


  <link name="arm0_link">
    <inertial>
      <mass value="0.001"/>
      <origin xyz="-0.7071 0 -0.7071" rpy="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.7071 0 -0.7071" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="-0.7071 0 -0.7071" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="arm0_link">
    <material>Gazebo/Green</material>
  </gazebo>


  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/my_robot</robotNamespace>
    </plugin>
  </gazebo>
</robot>














 
